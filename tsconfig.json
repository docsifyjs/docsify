{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,

    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "outDir": "dist/"
  },
  "include": ["src/**/*.js", "src/core/module.min.js"]
}
